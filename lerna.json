{
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file"],
      "message": "chore(release): publish",
      "registry": "https://www.npmjs.com/package"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
