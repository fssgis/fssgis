{
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        ".gitignore"
      ],
      "message": "chore: publish",
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "useWorkspaces": true,
      "ignoreScripts": true
    }
  },
  "packages": [
    "packages/*",
    "projects/*"
  ],
  "version": "independent"
}
