{
  "name": "fssgis",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "publish": "lerna publish --no-push",
    "dev:docs": "npx vitepress dev ./packages/fssgis-docs/docs --host=0.0.0.0",
    "build": "npx rollup --config",
    "build:all": "npx rollup --config ./build/index.js",
    "build:docs": "npx vitepress build ./packages/fssgis-docs/docs",
    "build:axios": "npx rollup --config ./build/build.fssgis-axios.js -w",
    "build:ext": "npx rollup --config ./build/build.fssgis-ext.js -w",
    "build:observable": "npx rollup --config ./build/build.fssgis-observable.js -w",
    "build:utils": "npx rollup --config ./build/build.fssgis-utils.js -w",
    "build:watcher": "npx rollup --config ./build/build.fssgis-watcher.js -w",
    "build:leaflet": "npx rollup --config ./build/build.fssg-leaflet.js -w",
    "test": "npx jest",
    "test:dev": "npx jest --watch",
    "test:vite": "vite --config ./packages/test-vite/vite.config.js"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/jest": "^26.0.24",
    "@types/leaflet": "^1.7.4",
    "@types/proj4leaflet": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@vitejs/plugin-vue": "^1.4.0",
    "@vue/babel-plugin-jsx": "^1.0.6",
    "@vue/compiler-sfc": "^3.1.5",
    "eslint": "^7.31.0",
    "eslint-plugin-vue": "^7.14.0",
    "nodemon": "^2.0.12",
    "rollup": "^2.54.0",
    "rollup-jest": "^1.1.2",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.36.0",
    "sass-loader": "^12.1.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.4",
    "vite": "^2.4.4",
    "vitepress": "^0.15.6"
  }
}
